{
  "name": "@guidepup/playwright",
  "version": "0.11.0",
  "description": "Screen reader driver for Playwright tests.",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "author": "Craig Morten <craig.morten@hotmail.co.uk>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/guidepup/guidepup-playwright"
  },
  "bugs": {
    "url": "https://github.com/guidepup/guidepup-playwright/issues"
  },
  "homepage": "https://github.com/guidepup/guidepup-playwright",
  "keywords": [
    "playwright",
    "screen-reader",
    "accessibility",
    "a11y",
    "voiceover"
  ],
  "scripts": {
    "build": "yarn clean && yarn compile",
    "ci": "yarn clean && yarn lint && yarn build",
    "clean": "rimraf lib",
    "compile": "tsc",
    "lint": "eslint . --ext .ts",
    "lint:fix": "yarn lint --fix",
    "prepublish": "yarn build",
    "pretest": "npx playwright install chromium firefox webkit",
    "test": "yarn test:chromium && yarn test:firefox && yarn test:webkit",
    "test:chromium": "playwright test --config ./example/chromium.config.ts ./example/tests/chromium/",
    "test:firefox": "playwright test --config ./example/firefox.config.ts ./example/tests/firefox/",
    "test:webkit": "playwright test --config ./example/webkit.config.ts ./example/tests/webkit/"
  },
  "dependencies": {
    "@guidepup/guidepup": "^0.20.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@playwright/test": "^1.29.2"
  }
}
